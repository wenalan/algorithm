/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) {
 *         val = x;
 *         next = null;
 *     }
 * }
 */
public class Solution {
    /**
     * @param head: the List
     * @param k: rotate to the right k places
     * @return: the list after rotation
     */
    public ListNode rotateRight(ListNode head, int k) {
        // write your code here
        if (head == null) return null;
        
        int len = 0;
        ListNode fast = head;
        while (fast != null) {
            fast = fast.next;
            len++;
        }
        k = k % len;
        if (k == 0) return head;
        
        fast = head;
        for (int i = 0; i < k; i++) {
            fast = fast.next;
        }
        
        ListNode slow = head;
        while (fast.next != null) {
            fast = fast.next;
            slow = slow.next;
        }
        
        ListNode head2 = slow.next;
        slow.next = null;
        fast.next = head;
        return head2;
    }
}
